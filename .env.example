# Configurações do Banco de Dados
DATABASE_URL=postgresql://postgres:admin123@postgres:5432/imovel_gestao

# Configurações do Redis
REDIS_URL=redis://redis:6379/0

# Configurações de Segurança
SECRET_KEY=your-secret-key-here-change-in-production-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações do Servidor
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Configurações de CORS (Frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:5173","http://127.0.0.1:3000"]

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=[".jpg",".jpeg",".png",".pdf",".doc",".docx"]

# Configurações do Pool de Conexões
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600